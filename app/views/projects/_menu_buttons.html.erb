<div class="project-buttons">
  <div class="btn-group">
    <% if @project.editable? %>
      <%= link_to 'Edit', edit_project_path(@project), :class => "btn" %>
      <%= link_to 'Delete', project_path(@project), :method => :delete, :class => "btn", :confirm => "Delete this project?" %>
      <%= link_to 'Publish', publish_review_project_path(@project), :class => "btn" %>
    <% end %>
  </div>
</div>