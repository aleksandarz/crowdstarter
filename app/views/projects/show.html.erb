<%= render :partial => "projects/item", :locals => {:project => @project}%>

<% if logged_in? && current_user == @project.user %>
  <%= link_to 'edit', edit_project_path(@project) %>
  <%= link_to 'delete', project_path(@project), :method => :delete %>

  <%= raw FPS.cbui_form( :recipient,
                   return_url:         root_url,
                   caller_reference:   "csus:#{@project.id}",
                   max_fixed_fee:      @project.amount.to_s,
                   recipient_pays_fee: "True" ) %>
<% end %>