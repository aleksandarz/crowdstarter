  <div class="navbar-inner">
    <div class="container">
      <a class="brand" href="/">
        CrowdStarter.us
      </a>

      <ul class="nav">
        <li class="active">
          <a href="#">Home</a>
        </li>
        <li><a href="#">List a project</a></li>
