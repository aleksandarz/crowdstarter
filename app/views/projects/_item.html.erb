<div class="project-box">
 <div class="project-box-border">
    <div class="project-box-rolodex">
      <%= link_to project.name, project %>
    </div>

    <div class="project-box-inner">
      <div class="project-box-inner-owner">
       <div class="photo"> <%= link_to(image_tag(project.user.image_url), project.user) %></div>
       <div class="name"> <%= project.user.name %></div>
      </div>


      <div class="project-box-inner-detail">
        <div class="hangboard project-due">
          <div class="title">Due by: </div>
          <%= project.funding_due.strftime("%h-%d") %>
        </div>
        <div class="hangboard project-goal">
          <div class="title">Goal: </div>
          <div class="money"><%= number_to_currency(project.amount) %> </div>
        </div>
        <div class="hangboard project-contributors">
          <div class="title">Collected: </div>
          <div class="money"><%= number_to_currency(project.collected) %> </div>
        </div>
      </div>
      <div class="project-box-inner-photo">
        <%= link_to(image_tag(project.image_url), project) %>
      </div>
    </div>

  </div>
</div>